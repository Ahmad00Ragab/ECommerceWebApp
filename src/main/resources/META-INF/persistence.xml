<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

           
    <persistence-unit name="ecommercePU">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>gov.iti.jets.admin.Admin</class>
        <class>gov.iti.jets.cart.CartItem</class>
        <class>gov.iti.jets.category.Category</class>
        <class>gov.iti.jets.order.Order</class>
        <class>gov.iti.jets.order.OrderItem</class>
        <class>gov.iti.jets.product.Product</class>
        <class>gov.iti.jets.user.User</class>
        
        <properties>
            <property name="jakarta.persistence.jdbc.driver"   value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url"      value="jdbc:mysql://localhost:3306/ecommerce"/>
            <property name="jakarta.persistence.jdbc.user"     value="projectUser"/>
            <property name="jakarta.persistence.jdbc.password" value="user"/>
            <property name="hibernate.dialect"                 value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto"            value="update"/> 
            <property name="hibernate.show_sql"                value="true"/>
            <property name="hibernate.show_sql"                value="true"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    
    </persistence-unit>
</persistence>
